@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthStateProvider

<AuthorizeView>
    <Authorized>
        <div class="nav-scrollable" style="@NavMenuStyle">
            <nav class="flex-column">
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">Home</NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="assets">Assets</NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="employees">Employees</NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="assignasset">Assign Asset</NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="activeassignments">Active Assignments</NavLink>
                </div>
                
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="logout">
                        <span class="oi oi-account-logout" aria-hidden="true"></span> Logout
                    </NavLink>
                </div>
                </nav>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="px-3">Please login to see navigation</div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private bool collapseNavMenu = false;

    private string NavMenuStyle => collapseNavMenu ? "display:none;" : "display:block;";

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}